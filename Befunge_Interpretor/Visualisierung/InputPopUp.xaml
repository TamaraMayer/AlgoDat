<Window x:Class="Visualisierung.InputPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visualisierung"
        mc:Ignorable="d"
        Title="InputPopUp" Height="100" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="MessageToUser"/>
        <TextBox />
        </StackPanel>
        <Button Content="Enter" Click="enter_btn_click" Width="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="2,2,2,2"/>
    </Grid>
</Window>
